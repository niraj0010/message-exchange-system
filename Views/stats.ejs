<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Topic Subscribers</title>
  <style>
    body {
      background: #121212;
      color: white;
      font-family: Arial, sans-serif;
      padding: 20px;
    }

    h1 {
      color: #17d96e;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 12px;
      border: 1px solid #444;
      text-align: left;
    }

    th {
      background: #17d96e;
    }

    tr:nth-child(even) {
      background: #1a1a1a;
    }

    #subChart {
      margin-top: 40px;
      background: #1a1a1a;
      padding: 20px;
      border-radius: 10px;
    }
  </style>
</head>
<body>
  <h1>Topic Subscribers</h1>

  <!-- Table -->
  <table>
    <thead>
      <tr>
        <th>Topic</th>
        <th>Subscribers</th>
      </tr>
    </thead>
    <tbody>
      <% stats.forEach(stat => { %>
        <tr>
          <td><%= stat.name %></td>
          <td><%= stat.subscribersCount %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <!-- Chart Data -->
  <div id="chartData"
       data-labels="<%= stats.map(stat => stat.name).join(',') %>"
       data-values="<%= stats.map(stat => stat.subscribersCount).join(',') %>">
  </div>

  <canvas id="subChart" width="800" height="400"></canvas>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const dataDiv = document.getElementById('chartData');
      const labels = dataDiv.getAttribute('data-labels').split(',');
      const values = dataDiv.getAttribute('data-values').split(',').map(Number);

      const ctx = document.getElementById('subChart').getContext('2d');

      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [{
            label: 'Subscribers',
            data: values,
            backgroundColor: '#17d96e',
            borderColor: '#0fa54c',
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } },
          scales: {
            y: { beginAtZero: true, ticks: { color: '#ccc' }, grid: { color: '#333' } },
            x: { ticks: { color: '#ccc' }, grid: { color: '#333' } }
          }
        }
      });
    });
  </script>
</body>
</html>
