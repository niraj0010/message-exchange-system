<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Topic Stats</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root[data-theme="dark"] {
      --bs-body-bg: #121212;
      --bs-body-color: #f8f9fa;
      --bs-card-bg: #1e1e1e;
      --bs-card-color: #f8f9fa;
      --bs-border-color: #333;
      --bs-table-bg: #1e1e1e;
      --bs-table-color: #f8f9fa;
      --bs-table-border: #444;
      --chart-bg: #1e1e1e;
      --chart-bar: #0fa54c;
      --chart-border: #17d96e;
      --chart-grid: #444;
      --chart-label: #adb5bd;
    }

    :root[data-theme="light"] {
      --bs-body-bg: #f8f9fa;
      --bs-body-color: #212529;
      --bs-card-bg: #ffffff;
      --bs-card-color: #212529;
      --bs-border-color: #dee2e6;
      --bs-table-bg: #ffffff;
      --bs-table-color: #212529;
      --bs-table-border: #dee2e6;
      --chart-bg: #ffffff;
      --chart-bar: #17d96e;
      --chart-border: #0fa54c;
      --chart-grid: #dee2e6;
      --chart-label: #666;
    }

    body {
      background-color: var(--bs-body-bg);
      color: var(--bs-body-color);
    }

    .card {
      background-color: var(--bs-card-bg);
      color: var(--bs-card-color);
      transition: transform 0.2s;
    }

    .card:hover {
      transform: translateY(-2px);
    }

    .table {
      background-color: var(--bs-table-bg);
      color: var(--bs-table-color);
    }

    .table th, .table td {
      border-color: var(--bs-table-border);
    }

    .table thead th {
      background-color: var(--chart-bar);
      color: #fff;
    }

    .highlight {
      background-color: #224422 !important;
      font-weight: bold;
    }

    #statChart {
      background: var(--chart-bg);
      border-radius: 10px;
      padding: 20px;
    }

    .contributor-badge {
      font-size: 0.9rem;
      color: #17d96e;
      font-weight: bold;
    }
  </style>
</head>
<body data-theme="light">
  <div class="container mt-4">
    <!-- Header with Theme Toggle -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="fas fa-chart-bar me-2"></i> Topic Statistics</h2>
      <button id="themeToggle" class="btn btn-sm btn-dark">üåì Toggle Theme</button>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light my-3 p-2 rounded shadow-sm">
      <div class="container-fluid">
        <div class="d-flex justify-content-between w-100">
          <div class="navbar-nav">
            <a class="nav-link" href="/api/users/dashboard">üè† Dashboard</a>
            <a class="nav-link" href="/topics/browse"># Browse Topics</a>
          </div>
          <div class="navbar-nav">
            <a class="btn btn-warning btn-sm mx-2" href="/messages/create">‚úçÔ∏è New Message</a>
            <a class="btn btn-outline-secondary btn-sm" href="/logout">üö™ Logout</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Time Range Filter -->
    <div class="mb-4">
      <label for="timeRange" class="form-label"><i class="fas fa-calendar-alt me-2"></i> Filter by Time Range:</label>
      <select id="timeRange" class="form-select w-auto d-inline-block">
        <option value="all">All Time</option>
        <option value="7days">Last 7 Days</option>
        <option value="30days">Last 30 Days</option>
      </select>
    </div>

    <!-- Stats Table -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <i class="fas fa-table me-2"></i> Topic Overview
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Topic</th>
                <th scope="col">Subscribers</th>
                <th scope="col">Posts</th>
                <th scope="col">Top Contributor</th>
              </tr>
            </thead>
            <tbody>
              <% stats.forEach(stat => { %>
                <tr class="<%= stat.isTrending ? 'highlight' : '' %>">
                  <td><i class="fas fa-hashtag me-1"></i> <%= stat.name %></td>
                  <td><%= stat.subscribersCount %></td>
                  <td><%= stat.postCount %></td>
                  <td>
                    <% if (stat.topContributor) { %>
                      <span class="contributor-badge"><%= stat.topContributor %></span>
                    <% } else { %>
                      <span class="text-muted">N/A</span>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Chart Section -->
    <div class="card shadow-sm">
      <div class="card-header">
        <i class="fas fa-chart-bar me-2"></i> Posts per Topic
      </div>
      <div class="card-body">
        <div id="chartData"
             data-labels="<%= stats.map(s => s.name).join(',') %>"
             data-values="<%= stats.map(s => s.postCount).join(',') %>">
        </div>
        <canvas id="statChart" width="800" height="400"></canvas>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Theme Toggle
      document.getElementById("themeToggle").addEventListener("click", () => {
        const html = document.documentElement;
        const body = document.body;
        const currentTheme = html.getAttribute("data-theme") || body.getAttribute("data-theme");
        const newTheme = currentTheme === "dark" ? "light" : "dark";
        html.setAttribute("data-theme", newTheme);
        body.setAttribute("data-theme", newTheme);

        // Update navbar class dynamically
        const navbar = document.querySelector('.navbar');
        if (newTheme === 'dark') {
          navbar.classList.remove('navbar-light');
          navbar.classList.add('navbar-dark');
        } else {
          navbar.classList.remove('navbar-dark');
          navbar.classList.add('navbar-light');
        }

        // Update chart colors dynamically
        updateChartColors(newTheme);
      });

      // Initial chart setup
      const dataDiv = document.getElementById('chartData');
      let labels = dataDiv.getAttribute('data-labels').split(',');
      let values = dataDiv.getAttribute('data-values').split(',').map(Number);

      const ctx = document.getElementById('statChart').getContext('2d');
      let chart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [{
            label: 'Posts',
            data: values,
            backgroundColor: getComputedStyle(document.documentElement).getPropertyValue('--chart-bar').trim(),
            borderColor: getComputedStyle(document.documentElement).getPropertyValue('--chart-border').trim(),
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          animation: {
            duration: 1000,
            easing: 'easeInOutQuad'
          },
          plugins: {
            legend: { display: false }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: { 
                color: getComputedStyle(document.documentElement).getPropertyValue('--chart-label').trim(),
                font: { size: 14 }
              },
              grid: { 
                color: getComputedStyle(document.documentElement).getPropertyValue('--chart-grid').trim(),
                borderColor: getComputedStyle(document.documentElement).getPropertyValue('--chart-grid').trim()
              }
            },
            x: {
              ticks: { 
                color: getComputedStyle(document.documentElement).getPropertyValue('--chart-label').trim(),
                font: { size: 14 }
              },
              grid: { 
                color: getComputedStyle(document.documentElement).getPropertyValue('--chart-grid').trim(),
                borderColor: getComputedStyle(document.documentElement).getPropertyValue('--chart-grid').trim()
              }
            }
          }
        }
      });

      // Function to update chart colors based on theme
      function updateChartColors(theme) {
        chart.data.datasets[0].backgroundColor = getComputedStyle(document.documentElement).getPropertyValue('--chart-bar').trim();
        chart.data.datasets[0].borderColor = getComputedStyle(document.documentElement).getPropertyValue('--chart-border').trim();
        chart.options.scales.y.ticks.color = getComputedStyle(document.documentElement).getPropertyValue('--chart-label').trim();
        chart.options.scales.x.ticks.color = getComputedStyle(document.documentElement).getPropertyValue('--chart-label').trim();
        chart.options.scales.y.grid.color = getComputedStyle(document.documentElement).getPropertyValue('--chart-grid').trim();
        chart.options.scales.x.grid.color = getComputedStyle(document.documentElement).getPropertyValue('--chart-grid').trim();
        chart.options.scales.y.grid.borderColor = getComputedStyle(document.documentElement).getPropertyValue('--chart-grid').trim();
        chart.options.scales.x.grid.borderColor = getComputedStyle(document.documentElement).getPropertyValue('--chart-grid').trim();
        chart.update();
      }

      // Time Range Filter
      document.getElementById('timeRange').addEventListener('change', function () {
        const range = this.value;
        // Mock filtering logic (you'll need to update this with actual backend data filtering)
        let filteredValues = values;
        if (range === '7days') {
          filteredValues = values.map(val => Math.floor(val * 0.3)); // Mock 30% of posts
        } else if (range === '30days') {
          filteredValues = values.map(val => Math.floor(val * 0.7)); // Mock 70% of posts
        }
        chart.data.datasets[0].data = filteredValues;
        chart.update();
      });
    });
  </script>
</body>
</html>