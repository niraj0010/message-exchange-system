<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root[data-theme="dark"] {
      --bs-body-bg: #121212;
      --bs-body-color: #f8f9fa;
      --bs-card-bg: #1e1e1e;
      --bs-card-color: #f8f9fa;
      --bs-border-color: #333;
    }

    body[data-theme="dark"] {
      background-color: var(--bs-body-bg);
      color: var(--bs-body-color);
    }

    [data-theme="dark"] .card {
      background-color: var(--bs-card-bg);
      color: var(--bs-card-color);
    }

    [data-theme="dark"] .list-group-item {
      background-color: #1e1e1e;
      color: #f8f9fa;
    }
  </style>
</head>
<body data-theme="light">
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h2>Welcome, <%= user.username %>!</h2>
      <button id="themeToggle" class="btn btn-sm btn-dark">üåì Toggle Theme</button>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light my-3 p-2 rounded shadow-sm">
      <div class="container-fluid">
        <div class="d-flex justify-content-between w-100">
          <div class="navbar-nav">
            <a class="nav-link" href="/topics/browse"># Browse Topics</a>
          </div>
          <div class="navbar-nav">
            <a href="/topics/stats" class="btn btn-info btn-sm mx-2">üìä Stats</a>
            <a class="btn btn-warning btn-sm mx-2" href="/messages/create">‚úçÔ∏è New Message</a>
            <a class="btn btn-outline-secondary btn-sm" href="/logout">üö™ Logout</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Create New Topic Form -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header">Create New Topic</div>
      <div class="card-body">
        <form method="POST" action="/topics">
          <div class="mb-3">
            <input type="text" name="name" class="form-control" placeholder="e.g., AI, JavaScript, Movies..." required />
          </div>
          <button type="submit" class="btn btn-primary">‚ûï Create Topic</button>
        </form>
      </div>
    </div>

    <!-- Subscribed Topics Section -->
    <div class="card shadow-sm">
      <div class="card-header">Your Subscribed Topics</div>
      <div class="card-body">
        <% if (userTopics && userTopics.length > 0) { %>
          <ul class="list-group">
            <% userTopics.forEach(topic => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><i class="fas fa-hashtag text-primary"></i> <%= topic.name %></span>
                <form method="POST" action="/topics/<%= topic._id %>/unsubscribe">
                  <button type="submit" class="btn btn-outline-danger btn-sm">Unsubscribe</button>
                </form>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-muted">You are not subscribed to any topics yet.</p>
        <% } %>
        <a class="btn btn-success mt-3" href="/topics/browse">üåê Explore More Topics</a>
      </div>
    </div>
  </div>

  <script>
    document.getElementById("themeToggle").addEventListener("click", () => {
      const html = document.documentElement;
      const body = document.body;
      const currentTheme = html.getAttribute("data-theme") || body.getAttribute("data-theme");
      const newTheme = currentTheme === "dark" ? "light" : "dark";
      html.setAttribute("data-theme", newTheme);
      body.setAttribute("data-theme", newTheme);
    });
  </script>
</body>
</html>
