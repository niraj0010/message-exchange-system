<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-4">
    <h2>Welcome, <%= user.username %>!</h2>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
      <div class="container-fluid">
        <div class="d-flex justify-content-between w-100">
          <div class="navbar-nav me-auto mb-2 mb-lg-0">
            <a class="nav-link" href="/topics/browse">Browse Topics</a>
          </div>
          <div class="navbar-nav me-auto mb-2 mb-lg-0">
            <a href="/topics/stats" class="btn btn-info btn-sm">ðŸ“Š View Stats</a>
          </div>
          <div class="navbar-nav">
            <a class="nav-link" href="/messages/create">Create New Message</a>
            <a class="nav-link" href="/logout">Logout</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Create New Topic Form -->
    <div class="card mb-4">
      <div class="card-header">Create New Topic</div>
      <div class="card-body">
        <form method="POST" action="/topics">
          <div class="mb-3">
            <input type="text" name="name" class="form-control" placeholder="Topic Name" required />
          </div>
          <button type="submit" class="btn btn-primary">Create Topic</button>
        </form>
      </div>
    </div>

    <!-- Subscribed Topics Section -->
    <div class="card">
      <div class="card-header">Your Topics</div>
      <div class="card-body">
        <% if (userTopics && userTopics.length > 0) { %>
            <ul class="list-group">
              <% userTopics.forEach(topic => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span><%= topic.name %></span>
                  <form method="POST" action="/topics/<%= topic._id %>/unsubscribe">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Unsubscribe</button>
                  </form>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p>You are not subscribed to any topics yet.</p>
          <% } %>
          
        <a class="btn btn-success mt-3" href="/topics/browse">Browse Your Topics</a>
      </div>
    </div>
  </div>
</body>
</html>
