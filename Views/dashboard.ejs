<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root[data-theme="dark"] {
      --bs-body-bg: #121212;
      --bs-body-color: #f8f9fa;
      --bs-card-bg: #1e1e1e;
      --bs-card-color: #f8f9fa;
      --bs-border-color: #333;
      --bs-navbar-bg: #1e1e1e;
      --bs-navbar-color: #f8f9fa;
      --bs-input-bg: #2d2d2d;
      --bs-input-color: #f8f9fa;
      --bs-input-border: #444;
      --bs-btn-bg: #0d6efd;
      --bs-btn-color: #fff;
      --bs-alert-bg: #2d2d2d;
      --bs-alert-color: #f8f9fa;
      --bs-alert-border: #444;
      --bs-placeholder-color: #adb5bd;
      --bs-muted-color: #adb5bd;
      --bs-link-color: #66b0ff;
    }

    body[data-theme="dark"] {
      background-color: var(--bs-body-bg);
      color: var(--bs-body-color);
    }

    [data-theme="dark"] .card {
      background-color: var(--bs-card-bg);
      color: var(--bs-card-color);
    }

    [data-theme="dark"] .list-group-item {
      background-color: #1e1e1e;
      color: #f8f9fa;
    }

    [data-theme="dark"] .navbar {
      background-color: var(--bs-navbar-bg) !important;
      color: var(--bs-navbar-color);
    }

    [data-theme="dark"] .navbar .nav-link,
    [data-theme="dark"] .navbar .btn {
      color: var(--bs-navbar-color);
    }

    [data-theme="dark"] .navbar .btn:hover {
      color: #0d6efd;
      background-color: rgba(13, 110, 253, 0.1);
    }

    [data-theme="dark"] .form-control {
      background-color: var(--bs-input-bg);
      color: var(--bs-input-color);
      border-color: var(--bs-input-border);
    }

    [data-theme="dark"] .form-control::placeholder {
      color: var(--bs-placeholder-color);
    }

    [data-theme="dark"] .form-select {
      background-color: var(--bs-input-bg);
      color: var(--bs-input-color);
      border-color: var(--bs-input-border);
    }

    [data-theme="dark"] .form-select::placeholder {
      color: var(--bs-placeholder-color);
    }

    [data-theme="dark"] .btn-primary {
      background-color: var(--bs-btn-bg);
      color: var(--bs-btn-color);
      border-color: var(--bs-btn-bg);
    }

    [data-theme="dark"] .btn-primary:hover {
      background-color: #0b5ed7;
      border-color: #0a58ca;
    }

    [data-theme="dark"] .alert {
      background-color: var(--bs-alert-bg);
      color: var(--bs-alert-color);
      border-color: var(--bs-alert-border);
    }

    [data-theme="dark"] .text-muted {
      color: var(--bs-muted-color) !important;
    }

    [data-theme="dark"] .text-muted a {
      color: var(--bs-link-color);
      text-decoration: none;
    }

    [data-theme="dark"] .text-muted a:hover {
      color: #99c7ff;
      text-decoration: underline;
    }

    .post-card {
      transition: transform 0.2s;
    }
    .post-card:hover {
      transform: translateY(-2px);
    }
    .vote-count {
      min-width: 30px;
      text-align: center;
      font-weight: bold;
    }
    .vote-btn {
      border: none;
      background: none;
      padding: 0 5px;
    }
    .vote-btn:hover {
      color: #0d6efd;
    }
    .upvoted {
      color: #ff4500;
    }
    .downvoted {
      color: #7193ff;
    }
  </style>
</head>
<body data-theme="light">
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h2>Welcome, <%= user.username %>!</h2>
      <button id="themeToggle" class="btn btn-sm btn-dark">üåì Toggle Theme</button>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light my-3 p-2 rounded shadow-sm">
      <div class="container-fluid">
        <div class="d-flex justify-content-between w-100">
          <div class="navbar-nav">
            <a class="nav-link" href="/topics/browse"># Browse Topics</a>
          </div>
          <div class="navbar-nav">
            <a href="/topics/stats" class="btn btn-info btn-sm mx-2">üìä Stats</a>
            <a class="btn btn-warning btn-sm mx-2" href="/messages/create">‚úçÔ∏è New Message</a>
            <form method="POST" action="/api/users/logout" class="d-inline">
              <button type="submit" class="btn btn-outline-secondary btn-sm">
                üö™ Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <div class="row">
      <!-- Main Content Column (Posts) -->
      <div class="col-md-8">
        <!-- Create New Post Card -->
        <div class="card mb-4 shadow-sm">
          <div class="card-header">Create New Post</div>
          <div class="card-body">
            <form method="POST" action="/posts">
              <div class="mb-3">
                <input type="text" name="title" class="form-control" placeholder="Title" required />
              </div>
              <div class="mb-3">
                <textarea name="content" class="form-control" rows="3" placeholder="What are your thoughts?" required></textarea>
              </div>
              <div class="mb-3">
                <select name="topicId" class="form-select" required>
                  <option value="">Select a topic</option>
                  <% userTopics.forEach(topic => { %>
                    <option value="<%= topic._id %>">#<%= topic.name %></option>
                  <% }) %>
                </select>
              </div>
              <button type="submit" class="btn btn-primary">Post</button>
            </form>
          </div>
        </div>

        <!-- Posts Feed -->
        <h4 class="mb-3">Recent Posts from Your Topics</h4>
        
        <% if (posts && posts.length > 0) { %>
          <% posts.forEach(post => { %>
            <div class="card mb-3 post-card shadow-sm">
              <div class="card-body">
                <div class="d-flex">
                  <!-- Voting Column -->
                  <div class="d-flex flex-column align-items-center me-3">
                    <form method="POST" action="/posts/<%= post._id %>/upvote" class="mb-1">
                      <button type="submit" class="vote-btn <%= post.upvotes.includes(user._id.toString()) ? 'upvoted' : '' %>">
                        <i class="fas fa-arrow-up"></i>
                      </button>
                    </form>
                    <div class="vote-count">
                      <%= post.upvotes.length - post.downvotes.length %>
                    </div>
                    <form method="POST" action="/posts/<%= post._id %>/downvote" class="mt-1">
                      <button type="submit" class="vote-btn <%= post.downvotes.includes(user._id.toString()) ? 'downvoted' : '' %>">
                        <i class="fas fa-arrow-down"></i>
                      </button>
                    </form>
                  </div>
                  
                  <!-- Post Content -->
                  <div class="flex-grow-1">
                    <h5 class="card-title">
                      <a href="/posts/<%= post._id %>" class="text-decoration-none"><%= post.title %></a>
                    </h5>
                    <p class="card-text"><%= post.content %></p>
                    <div class="d-flex justify-content-between text-muted small">
                      <span>
                        Posted in <a href="/topics/<%= post.topic._id %>" class="text-decoration-none">#<%= post.topic.name %></a>
                        by <%= post.author.username %>
                      </span>
                      <span>
                        <%= new Date(post.createdAt).toLocaleString() %>
                      </span>
                    </div>
                    <div class="mt-2">
                      <a href="/posts/<%= post._id %>" class="btn btn-sm btn-outline-secondary">
                        <i class="far fa-comment"></i> <%= post.comments.length %> comments
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="alert alert-info">
            No posts to display. Subscribe to more topics or create a post!
          </div>
        <% } %>
      </div>

      <!-- Sidebar Column -->
      <div class="col-md-4">
        <!-- Create New Topic Form -->
        <div class="card mb-4 shadow-sm">
          <div class="card-header">Create New Topic</div>
          <div class="card-body">
            <form method="POST" action="/topics">
              <div class="mb-3">
                <input type="text" name="name" class="form-control" placeholder="e.g., AI, JavaScript, Movies..." required />
              </div>
              <button type="submit" class="btn btn-primary">‚ûï Create Topic</button>
            </form>
          </div>
        </div>

        <!-- Subscribed Topics Section -->
        <div class="card shadow-sm">
          <div class="card-header">Your Subscribed Topics</div>
          <div class="card-body">
            <% if (userTopics && userTopics.length > 0) { %>
              <ul class="list-group">
                <% userTopics.forEach(topic => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-hashtag text-primary"></i> <%= topic.name %></span>
                    <form method="POST" action="/topics/<%= topic._id %>/unsubscribe">
                      <button type="submit" class="btn btn-outline-danger btn-sm">Unsubscribe</button>
                    </form>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p class="text-muted">You are not subscribed to any topics yet.</p>
            <% } %>
            <a class="btn btn-success mt-3" href="/topics/browse">üåê Explore More Topics</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById("themeToggle").addEventListener("click", () => {
      const html = document.documentElement;
      const body = document.body;
      const currentTheme = html.getAttribute("data-theme") || body.getAttribute("data-theme");
      const newTheme = currentTheme === "dark" ? "light" : "dark";
      html.setAttribute("data-theme", newTheme);
      body.setAttribute("data-theme", newTheme);

      // Update navbar class dynamically
      const navbar = document.querySelector('.navbar');
      if (newTheme === 'dark') {
        navbar.classList.remove('navbar-light');
        navbar.classList.add('navbar-dark');
      } else {
        navbar.classList.remove('navbar-dark');
        navbar.classList.add('navbar-light');
      }
    });
  </script>
</body>
</html>