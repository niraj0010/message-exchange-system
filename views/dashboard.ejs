<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  >
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  >
  <style>
    
    
    .post-card { transition: transform 0.2s; }
    .post-card:hover { transform: translateY(-2px); }
    .vote-count { min-width: 30px; text-align: center; font-weight: bold; }
    .vote-btn { border: none; background: none; padding: 0 5px; }
    .vote-btn:hover { color: #0d6efd; }
    .upvoted  { color: #ff4500; }
    .downvoted{ color: #7193ff; }
  </style>
</head>
<body data-theme="light">
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h2>Welcome, <%= user.username %>!</h2>
      <button id="themeToggle" class="btn btn-sm btn-dark">üåì Toggle Theme</button>
    </div>

    <!-- Navigation with inline notification dropdown -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light my-3 p-2 rounded shadow-sm">
      <div class="container-fluid d-flex justify-content-between">
        <div class="navbar-nav">
          <a class="nav-link" href="/topics/browse"># Browse Topics</a>
        </div>
        <div class="navbar-nav align-items-center">
          <a href="/topics/stats" class="btn btn-info btn-sm mx-2">üìä Stats</a>

          <!-- Notification Dropdown -->
          <div class="dropdown mx-2">
            <button
              id="notifDropdownBtn"
              class="btn btn-warning btn-sm dropdown-toggle position-relative"
              type="button"
              data-bs-toggle="dropdown"
              data-bs-auto-close="false"
              aria-expanded="false"
            >
              üîî
              <% if (unreadCount > 0) { %>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                  <%= unreadCount %>
                </span>
              <% } %>
            </button>
            <ul
              class="dropdown-menu dropdown-menu-end"
              aria-labelledby="notifDropdownBtn"
              style="min-width: 300px;"
            >
              <% if (notifications && notifications.length > 0) { %>
                <% notifications.forEach(n => { %>
                  <li class="dropdown-item d-flex justify-content-between align-items-start">
                    <div style="max-width: 200px; white-space: normal;">
                      <small class="text-muted"><%= new Date(n.created).toLocaleTimeString() %></small><br>
                      <%= n.message %>
                    </div>
                    <% if (!n.read) { %>
                      <span class="badge bg-danger">New</span>
                    <% } %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                <% }) %>
              <% } else { %>
                <li class="dropdown-item text-muted">No notifications</li>
              <% } %>
            </ul>
          </div>

          <a class="btn btn-warning btn-sm mx-2" href="/messages/create">‚úçÔ∏è New Message</a>

          <form method="POST" action="/api/users/logout" class="d-inline">
            <button type="submit" class="btn btn-outline-secondary btn-sm">üö™ Logout</button>
          </form>
        </div>
      </div>
    </nav>

    <div class="row">
      <!-- Main Content Column (Posts) -->
      <div class="col-md-8">
        <!-- Create New Post Card -->
        <div class="card mb-4 shadow-sm">
          <div class="card-header">Create New Post</div>
          <div class="card-body">
            <form method="POST" action="/posts">
              <div class="mb-3">
                <input type="text" name="title" class="form-control" placeholder="Title" required/>
              </div>
              <div class="mb-3">
                <textarea name="content" class="form-control" rows="3" placeholder="What are your thoughts?" required></textarea>
              </div>
              <div class="mb-3">
                <select name="topicId" class="form-select" required>
                  <option value="">Select a topic</option>
                  <% userTopics.forEach(topic => { %>
                    <option value="<%= topic._id %>">#<%= topic.name %></option>
                  <% }) %>
                </select>
              </div>
              <button type="submit" class="btn btn-primary">Post</button>
            </form>
          </div>
        </div>

        <!-- Posts Feed -->
        <h4 class="mb-3">Recent Posts from Your Topics</h4>
        <% if (posts && posts.length > 0) { %>
          <% posts.forEach(post => { %>
            <div class="card mb-3 post-card shadow-sm">
              <div class="card-body">
                <div class="d-flex">
                  <div class="d-flex flex-column align-items-center me-3">
                    <form method="POST" action="/posts/<%= post._id %>/upvote" class="mb-1">
                      <button type="submit" class="vote-btn <%= post.upvotes.includes(user._id.toString()) ? 'upvoted' : '' %>">
                        <i class="fas fa-arrow-up"></i>
                      </button>
                    </form>
                    <div class="vote-count"><%= post.upvotes.length - post.downvotes.length %></div>
                    <form method="POST" action="/posts/<%= post._id %>/downvote" class="mt-1">
                      <button type="submit" class="vote-btn <%= post.downvotes.includes(user._id.toString()) ? 'downvoted' : '' %>">
                        <i class="fas fa-arrow-down"></i>
                      </button>
                    </form>
                  </div>
                  <div class="flex-grow-1">
                    <h5 class="card-title">
                      <a href="/posts/<%= post._id %>" class="text-decoration-none"><%= post.title %></a>
                    </h5>
                    <p class="card-text"><%= post.content %></p>
                    <div class="d-flex justify-content-between text-muted small">
                      <span>
                        Posted in 
                        <a href="/topics/<%= post.topic._id %>" class="text-decoration-none">#<%= post.topic.name %></a> 
                        by <%= post.author.username %>
                      </span>
                      <span><%= new Date(post.createdAt).toLocaleString() %></span>
                      <% if (post.author._id.toString() === user._id.toString()) { %>
                        <form method="POST" action="/posts/<%= post._id %>/delete" class="d-inline ms-2">
                          <button type="submit" class="btn btn-sm btn-outline-danger" 
                                  onclick="return confirm('Are you sure you want to delete this post?')">
                            <i class="far fa-trash-alt"></i> Delete
                          </button>
                        </form>
                      <% } %>
                    </div>
                    <div class="mt-2">
                      <a href="/posts/<%= post._id %>" class="btn btn-sm btn-outline-secondary">
                        <i class="far fa-comment"></i> <%= post.comments.length %> comment<%= post.comments.length !== 1 ? 's' : '' %>
                      </a>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="alert alert-info">No posts to display. Subscribe to more topics or create a post!</div>
        <% } %>
      </div>  

      <!-- Sidebar Column -->
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-header">Create New Topic</div>
          <div class="card-body">
            <form method="POST" action="/topics">
              <div class="mb-3">
                <input type="text" name="name" class="form-control" placeholder="e.g., AI, JavaScript, Movies..." required/>
              </div>
              <button type="submit" class="btn btn-primary">‚ûï Create Topic</button>
            </form>
          </div>
        </div>

        <div class="card shadow-sm">
          <div class="card-header">Your Subscribed Topics</div>
          <div class="card-body">
            <% if (userTopics && userTopics.length > 0) { %>
              <ul class="list-group">
                <% userTopics.forEach(topic => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-hashtag text-primary"></i> <%= topic.name %></span>
                    <form method="POST" action="/topics/<%= topic._id %>/unsubscribe">
                      <button type="submit" class="btn btn-outline-danger btn-sm">Unsubscribe</button>
                    </form>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p class="text-muted">You are not subscribed to any topics yet.</p>
            <% } %>
            <a class="btn btn-success mt-3" href="/topics/browse">üåê Explore More Topics</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS for dropdown -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Grab the bell button
    const dropdownBtn = document.getElementById('notifDropdownBtn');
  
    dropdownBtn.addEventListener('shown.bs.dropdown', () => {
      fetch('/notifications/mark-dropdown-read', { method: 'POST' })
        .then(res => res.json())
        .then(() => {
          // 1) Remove the red badge from the button
          const btnBadge = dropdownBtn.querySelector('.badge');
          if (btnBadge) btnBadge.remove();
  
          // 2) Remove each "New" badge inside the dropdown items
          document.querySelectorAll('.dropdown-menu .badge.bg-danger').forEach(el => el.remove());
        })
        .catch(err => console.error('Failed to mark read:', err));
    });
  </script>
  

     
     <script>
    document.getElementById("themeToggle").addEventListener("click", () => {
      const html = document.documentElement;
      const current = html.getAttribute("data-theme");
      const next = current === "dark" ? "light" : "dark";
      html.setAttribute("data-theme", next);
      document.body.setAttribute("data-theme", next);
      const nav = document.querySelector('.navbar');
      nav.classList.toggle('navbar-dark', next === "dark");
      nav.classList.toggle('navbar-light', next === "light");
    });
  </script>
</body>
</html>
